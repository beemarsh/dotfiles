#Lock the screen on presing the lock key (Mine is F10)
bindsym F10 exec xsecurelock

#Automatically lock the screen using xsecurelock
exec --no-startup-id xss-lock --transfer-sleep-lock -- xsecurelock

#Takes thes screenshot of the entire screen and copies to clipboard
bindsym Print exec --no-startup-id screenshot full

#Takes screenshot of the active window and copes to clipboard
bindsym $mod+Print exec --no-startup-id screenshot focus

#Take screenshot of selected screen and copes to clipboard
bindsym $mod+Shift+Print exec --no-startup-id screenshot select

